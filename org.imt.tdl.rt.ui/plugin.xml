<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.commands">
      <category
            name="TDL"
            id="org.etsi.mts.tdl.tools.rt.ui.commands.category">
      </category>
      <command
            name="Generate TDL Library"
            categoryId="org.etsi.mts.tdl.tools.rt.ui.commands.category"
            id="org.etsi.mts.tdl.tools.rt.ui.commands.codeGeneratorCommand">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            commandId="org.etsi.mts.tdl.tools.rt.ui.commands.codeGeneratorCommand"
            class="org.imt.tdl.codeGenerator.handler.CodeGenerationHandler">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               label="TDL"
               mnemonic="T"
               id="org.etsi.mts.tdl.tools.menus.TDLMenu">
            <command
                  commandId="org.etsi.mts.tdl.tools.rt.ui.commands.codeGeneratorCommand"
                  icon="icons/tdl.png"
                  mnemonic="G"
                  id="org.etsi.mts.tdl.tools.rt.ui.menus.codeGeneratorCommand">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="org.etsi.mts.tdl.tools.rt.ui.toolbars.translate">
            <command
                  commandId="org.etsi.mts.tdl.tools.rt.ui.commands.codeGeneratorCommand"
                  icon="icons/tdl.png"
                  tooltip="Generate TDL Library"
                  id="org.etsi.mts.tdl.tools.rt.ui.menus.codeGeneratorCommand">
            </command>
         </toolbar>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            category="tdl.views"
            class="org.imt.tdl.testResult.ui.TDLTestResultsView"
            icon="icons/tdl.png"
            id="test.views.TDLTestResultsTestViewPart"
            name="TDL Test Results"
            restorable="true">
      </view>
      <category
            id="tdl.views"
            name="TDL">
      </category>
      <view
            category="tdl.views"
            class="org.imt.tdl.coverage.ui.TDLCoverageView"
            icon="icons/coverage.png"
            id="test.views.TDLCoverageViewPart"
            name="TDL Coverage"
            restorable="true">
      </view>
   </extension>
</plugin>
